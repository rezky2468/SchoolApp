<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    android:padding="15dp"
    android:focusable="false"
    android:foreground="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pengajar_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/img1"
        android:focusable="false"/>

    <TextView
        android:id="@+id/pengajar_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:focusable="false"
        android:layout_toRightOf="@id/pengajar_image"
        android:text="Nama Guru"
        android:textColor="@color/colorOnPrimaryText"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pengajar_mapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_below="@id/pengajar_name"
        android:layout_toRightOf="@id/pengajar_image"
        android:text="Ini adalah guru mapel.."
        android:textColor="@color/colorOnSecondaryText"
        android:textSize="14sp" />

</RelativeLayout>