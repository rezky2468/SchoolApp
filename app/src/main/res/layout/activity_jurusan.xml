<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".User.BottomNavigationView.Menu1Home.Home2Jurusan.JurusanActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_jurusan"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Jurusan">

            <ImageView
                android:id="@+id/jurusan_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="30dp"
                android:src="@drawable/jurusan1"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/jurusan_back_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:onClick="callBackScreen"
                    android:padding="5dp"
                    android:src="@drawable/general_back_button"
                    app:tint="@color/colorPrimaryIcon" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_collapsing_layout"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="35dp">

            <RelativeLayout
                android:id="@+id/heading_jurusan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/jurusan_foto_kaprodi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img1"
                    app:civ_border_color="@color/colorSecondaryOne"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/jurusan_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/jurusan_foto_kaprodi"
                    android:fontFamily="@font/muli_black"
                    android:text="@string/rpl_long"
                    android:textColor="@color/colorOnPrimaryText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kaprodi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jurusan_judul"
                    android:layout_toRightOf="@id/jurusan_foto_kaprodi"
                    android:text="Kaprodi: "
                    android:textColor="@color/colorOnPrimaryText" />

                <TextView
                    android:id="@+id/jurusan_nama_kaprodi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jurusan_judul"
                    android:layout_toRightOf="@id/kaprodi_text"
                    android:text="Nama Kaprodi"
                    android:textColor="@color/colorOnPrimaryText" />


            </RelativeLayout>

            <TextView
                android:id="@+id/jurusan_artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading_jurusan"
                android:text="@string/artikelBerita1"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorOnPrimaryText" />

            <HorizontalScrollView
                android:id="@+id/h_scroll"
                android:layout_below="@id/jurusan_artikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/card_1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/jurusan_alasan"
                                app:tint="@color/colorSecondaryTwo" />

                            <Button
                                android:id="@+id/jurusan1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/categories_card_selector"
                                android:clickable="true" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Alasan\nMemilih"
                            android:textAlignment="center"
                            android:textColor="@color/colorOnPrimaryText" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/card_1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/jurusan_plus_min"
                                app:tint="@color/colorSecondaryTwo" />

                            <Button
                                android:id="@+id/jurusan2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/categories_card_selector"
                                android:clickable="true" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Kelebihan\nKekurangan"
                            android:textAlignment="center"
                            android:textColor="@color/colorOnPrimaryText" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/card_1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/jurusan_mata_pelajaran"
                                app:tint="@color/colorSecondaryTwo" />

                            <Button
                                android:id="@+id/jurusan3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/categories_card_selector"
                                android:clickable="true" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Mata\nPelajaran"
                            android:textAlignment="center"
                            android:textColor="@color/colorOnPrimaryText" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/card_1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/jurusan_kuliah"
                                app:tint="@color/colorSecondaryTwo" />

                            <Button
                                android:id="@+id/jurusan4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/categories_card_selector"
                                android:clickable="true" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Jurusan\nKuliah"
                            android:textAlignment="center"
                            android:textColor="@color/colorOnPrimaryText" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/card_1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/jurusan_prospek_kerja_icon"
                                app:tint="@color/colorSecondaryTwo" />

                            <Button
                                android:id="@+id/jurusan5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/categories_card_selector"
                                android:clickable="true" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Prospek\nKerja"
                            android:textAlignment="center"
                            android:textColor="@color/colorOnPrimaryText" />


                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share_jurusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/colorSecondaryOne"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:elevation="0dp"
        android:src="@drawable/menu_share_icon"
        android:tint="@color/colorSecondaryTwo"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar_jurusan"
        app:layout_anchorGravity="end|bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>