<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    android:foreground="?attr/selectableItemBackground"
    android:padding="15dp">

        <TextView
            android:id="@+id/pengumuman_title"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="This is title"
            android:textColor="@color/colorOnPrimaryText"
            android:textSize="18sp"
            android:maxLength="50"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pengumuman_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31 Januari 2010"
            android:textSize="10sp"
            android:layout_below="@id/pengumuman_title"
            android:textColor="@color/colorOnSecondaryText"/>

        <TextView
            android:id="@+id/pengumuman_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pengumuman_date"
            android:maxLength="150"
            android:maxLines="2"
            android:text="This is description about the announcement. You can type a little bit here. Just a little but for testing... This is description about the announcement. You can type a little bit here. Just a little but for testing..."
            android:textColor="@color/colorOnPrimaryText"
            android:textSize="12sp"
            android:ellipsize="end"/>

</RelativeLayout>